doctype html
html[amp]
    == slim :"global_partials/head",
            locals: { description: description, title: title, style: style, url: url }
    body
        .main
            - content.each_with_index do |part, i|
                div[id="content-#{i}"]
                    == part
            noscript
                - fallback.each_with_index do |part, i|
                    div[id="fallback-#{i}"]
                        == part
